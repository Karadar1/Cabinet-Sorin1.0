datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Doctor {
  id           Int           @id @default(autoincrement())
  name         String
  appointments Appointment[]
}

model Appointment {
  id          Int      @id @default(autoincrement())
  doctorId    Int
  doctor      Doctor   @relation(fields: [doctorId], references: [id])
  start       DateTime
  end         DateTime
  name        String
  phone       String
  species     String
  reason      String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())

  @@unique([doctorId, start]) // împiedică dublurile pe același slot
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  resume      String
  content     String
  image       String
  category    String
  author      String
  createdAt   DateTime @default(now())
}